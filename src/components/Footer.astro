---
interface Props {
  links?: { label: string; url: string }[];
}

const { links = [] } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer
  class="bg-black text-gray-400 py-12 border-t border-white/10 relative overflow-hidden"
>
  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <!-- Brand & Copyright -->
      <div class="space-y-4 text-center md:text-left">
        <h2
          class="text-2xl font-heading font-black text-white tracking-tighter"
        >
          WILD <span class="text-amber-500">KINGDOM</span>
        </h2>
        <p class="text-sm font-light text-gray-500">
          Celebrating the majesty of Africa's wildlife.
        </p>
        <p class="text-xs text-gray-600">
          &copy; {currentYear} Wild Kingdom. All rights reserved.
        </p>
      </div>

      <!-- Links -->
      <div class="flex flex-col items-center md:items-end space-y-4">
        {
          links.length > 0 && (
            <>
              <h3 class="text-sm uppercase tracking-widest text-amber-500 font-bold mb-2">
                Learn More
              </h3>
              <ul class="flex flex-col gap-3 text-center md:text-right">
                {links.map((link) => (
                  <li>
                    <a
                      href={link.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-gray-400 hover:text-white hover:underline transition-colors decoration-amber-500/50 underline-offset-4"
                    >
                      {link.label} &rarr;
                    </a>
                  </li>
                ))}
              </ul>
            </>
          )
        }
      </div>
    </div>
  </div>

  <!-- Subtle background decoration -->
  <div
    class="absolute -bottom-1/2 -right-1/4 w-full h-full bg-amber-500/5 blur-[100px] rounded-full pointer-events-none"
  >
  </div>
</footer>
